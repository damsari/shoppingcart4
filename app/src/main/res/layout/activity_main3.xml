<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:id="@+id/rl2"

    android:padding="16dp"

    android:background="@drawable/appback"
    tools:context=".Main2Activity">
    <ImageView
        android:id="@+id/imageView11"
        android:src="@drawable/pizza"
        android:layout_width="1000dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="238dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Chicken Pizza"
        android:textAlignment="center"
        android:textColor="#59941D"
        android:textColorHighlight="#00FA0707"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/imageView11"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/textView33"
        android:layout_width="389dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Large chicken pizza with extra cheese "
        android:textColor="#0A0808"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@id/textView22"/>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Rs 950/="
        android:textColor="#181515"
        android:textSize="18sp"
        android:layout_below="@id/textView33"
        android:layout_alignLeft="@id/textView33"/>
    <TextView
        android:id="@+id/textView55"
        android:layout_width="126dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D5D3D4"
        android:text=" -     1     +"
        android:textAlignment="center"

        android:layout_below="@id/textView44"
        android:textSize="24sp"
        />



    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src= "@drawable/ic_shopping_cart_black_24dp"
        android:layout_below="@id/textView44"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@id/textView33"/>



</RelativeLayout>