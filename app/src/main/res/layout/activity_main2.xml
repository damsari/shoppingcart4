<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:id="@+id/rl"

    android:padding="16dp"

    android:background="@drawable/appback"
    tools:context=".Main2Activity">
    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/friedrice"
        android:layout_width="1000dp"
        android:layout_height="310dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="238dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Chinese fried rice"
        android:textAlignment="center"
        android:textColor="#59941D"
        android:textColorHighlight="#00FA0707"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/imageView"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="389dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Delicious chinese fried rice with chicken "
        android:textColor="#0A0808"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@id/textView2"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Rs 320/="
        android:textColor="#181515"
        android:textSize="18sp"
        android:layout_below="@id/textView3"
        android:layout_alignLeft="@id/textView3"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="126dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D5D3D4"
        android:text=" -     1     +"
        android:textAlignment="center"
        android:layout_below="@id/textView4"
        android:textSize="24sp"
        />



    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src= "@drawable/ic_shopping_cart_black_24dp"
        android:layout_below="@id/textView4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@id/textView3"/>



</RelativeLayout>